<div class="alert alert-primary mt-4" role="alert">
    <span class="oi oi-check" aria-hidden="true"></span>
    <strong>@Title</strong>

    <span class="text-nowrap">
        @Text
    </span>
</div>

@code {
    // 親コンポーネントがパラメータを提供できる
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Text { get; set; }
}
